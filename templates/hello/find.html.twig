{% extends 'base.html.twig' %}

{% block page %}{{ title }}{% endblock %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
<h2>Find Entity</h2>
{{ form_start(form) }}
{{ form_widget(form) }}
{{ form_end(form) }}
<hr>
{% if data != null %}
    <table>
        <tr><th>Id</th>{{ data.id }}</tr>
        <tr><th>Name</th>{{ data.name }}</tr>
        <tr><th>Mail</th>{{ data.mail }}</tr>
        <tr><th>Age</th>{{ data.age }}</tr>
    </table>
{% endif %}
{% endblock %}
